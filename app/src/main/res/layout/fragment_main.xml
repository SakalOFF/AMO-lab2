<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment"
    tools:ignore="LabelFor">

    <Button
        android:id="@+id/random_button"
        android:layout_width="128dp"
        android:layout_height="52dp"
        android:layout_marginStart="15dp"
        android:text="@string/random_string"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/array_edit"
        app:layout_constraintVertical_bias="0.536" />

    <Button
        android:id="@+id/graph_button"
        android:layout_width="77dp"
        android:layout_height="49dp"
        android:layout_marginEnd="15dp"
        android:text="@string/graph_label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/array_edit"
        app:layout_constraintVertical_bias="0.53" />

    <EditText
        android:id="@+id/array_edit"
        android:layout_width="372dp"
        android:layout_height="185dp"
        android:autofillHints="no"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.227" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="284dp"
        android:layout_height="44dp"
        android:gravity="bottom|start"
        android:text="@string/edit_label"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/array_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.149"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/sort_button"
        android:layout_width="140dp"
        android:layout_height="43dp"
        android:text="@string/sort_string"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/graph_button"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toEndOf="@+id/random_button"
        app:layout_constraintTop_toBottomOf="@+id/array_edit"
        app:layout_constraintVertical_bias="0.53" />

</androidx.constraintlayout.widget.ConstraintLayout>